{
  "build": {
    "builder": "paketobuildpacks/builder:base"
  },
  "start": "streamlit run main.py --server.port=${{PORT}} --server.enableCORS=false --server.enableXsrfProtection=false",
  "variables": {
    "PYTHON_VERSION": "3.11"
  },
  "services": [
    {
      "name": "ictpro-app",
      "startCommand": "streamlit run main.py --server.port=${{PORT}}",
      "disk": {
        "name": "data",
        "mountPath": "/app/data",
        "sizeGB": 1
      }
    }
  ]
}